KER=`uname -r`
FINDCMD=-type f -and \( -name "*.c" -or -name "*.h" -or -name "*.cpp" -or -name "*.hpp" -or -name "*.py" \) | grep -v vmpi | grep -v "\.mod\.c" | xargs wc -l

all: usr ker

usr:
	cd build && make

ker:
	make -C /lib/modules/$(KER)/build INSTALL_MOD_PATH=@INSTALL_MOD_PATH@ HAVE_VMPI=@HAVE_VMPI@ M=$(PWD)/kernel PWD=$(PWD)/kernel modules

usr_count:
	find common user include $(FINDCMD)

ker_count:
	find common kernel $(FINDCMD)

stat count:
	cloc . || (find common kernel user include $(FINDCMD); echo "install 'cloc' for better code statistics")

clean: usr_clean ker_clean

usr_clean:
	cd build && make clean

ker_clean:
	make -C /lib/modules/$(KER)/build INSTALL_MOD_PATH=@INSTALL_MOD_PATH@ M=$(PWD)/kernel clean

install: usr_install ker_install

usr_install:
	cd build && make install

# Install kernelspace parts using a script, instead of placing the command
# directly in the target, since 'sudo' seems to interact badly with
# 'make modules_install'
ker_install:
	./install-kernelspace
